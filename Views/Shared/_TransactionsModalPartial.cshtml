@model SGF.Models.Entities.Transaction

<div class="modal fade" id="transactionModal" data-backdrop="static" role="dialog" aria-labelledby="modalTransaction" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalTransaction">Nova Transação</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar" title="Fechar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="transactionForm">
          <div class="form-group" id="picker">
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" class="form-control" id="transactionDate">
          </div>
          <div class="form-group">
            <label asp-for="Category" class="control-label"></label>
            <select asp-for="Category" id="transactionCategories" class="form-select form-control"></select>
          </div>
          <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" id="transactionDescription">
          </div>
          <div class="form-group">
            <label asp-for="TransactionType">Tipo de Transação</label>
            <div data-toggle="buttons">
              <label class="btn btn-secondary active">
                <input asp-for="TransactionType" type="radio" name="TransactionType" value="0" checked> Entrada
              </label>
              <label class="btn btn-secondary">
                <input asp-for="TransactionType" type="radio" name="TransactionType" value="1"> Saída
              </label>
            </div>
          </div>
          <div class="form-group">
            <label asp-for="Amount" class="control-label"></label>
            <input asp-for="Amount" class="form-control" id="transactionAmount">
          </div>
          <div id="validationMessages" class="text-danger"></div>
          <button type="button" id="saveTransactionButton" class="btn btn-primary" title="Salvar dados">Salvar</button>
        </form>
      </div>
    </div>
  </div>
</div>