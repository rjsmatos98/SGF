@model IEnumerable<SGF.Models.Entities.Transaction>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col"></th>
      <th>@Html.DisplayNameFor(model => model.Date)</th>
      <th>@Html.DisplayNameFor(model => model.Description)</th>
      <th>@Html.DisplayNameFor(model => model.TransactionType)</th>
      <th class="text-right">@Html.DisplayNameFor(model => model.Amount)</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model) {
      <tr>
        <td class="text-center"><button class="btn p-0 edit-transaction" data-id="@item.Id"><i class="fa-solid fa-pen"></i></button></td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td class="text-truncate">
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransactionType)
        </td>
        <td class="text-right">
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td class="text-center"><button class="btn p-0 delete-transaction" data-id="@item.Id"><i class="fa-solid fa-trash"></i></button></td>
      </tr>
    }
  </tbody>
</table>