@model RegisterViewModel

@{
  ViewBag.Title = "Registro de Usuário";
}
@section Styles {
    <style>
        .login-container {
            height: calc(100vh - var(--header-h) - var(--footer-h));
        }
    </style>
}

<div class="login-container d-flex justify-content-center align-items-center">
  <div class="card p-0 col-lg-4 col-sm-8" style="border-color: var(--primary-300);">
    <div class="card-header" style="border-color:var(--primary-300); background-color:var(--primary-200);">
      <h3 class="card-title text-center mb-2 mt-2" style="color: var(--primary-500);">Registrar Usuário</h3>
    </div>
    <div class="card-body">
      <div class="col-12 p-0">
        <form method="post">
          <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
          </div>
          <div asp-validation-summary="All" class="text-danger"></div>
          <button type="submit" class="btn btn-primary mt-3 w-100">Registrar</button>
        </form>
      </div>
    </div>
    <div class="card-footer" style="border-color:var(--primary-300); background-color:var(--primary-200);">
      <span>Já é registrado? <a asp-controller="account" asp-action="login" style="color:var(--primary-500);">Login</a></span>
    </div>
  </div>  
</div>